<UserControl x:Class="TestWpf.Visualization.Views.BarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestWpf.Visualization.Views"
             xmlns:ViewModels="clr-namespace:TestWpf.Visualization.ViewModels"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance ViewModels:BarViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel Orientation="Vertical">
            <UniformGrid Height="50" Width="200" Rows="1">
                <TextBox Text="{Binding ValueNewBar}"/>
                <TextBox Text="{Binding NameNewBar}"/>
                <Button Content="Bar hinzufügen" Command="{Binding AddBarCommand}"/>
            </UniformGrid>
            <lvc:CartesianChart Series="{Binding BarValues}" Height="400" LegendLocation="Right"/>
        </StackPanel>
            
    </Grid>
</UserControl>
