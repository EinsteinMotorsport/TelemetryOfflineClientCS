<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <targets>

    <target name="logfile" xsi:type="File" fileName="../../../../LogFilesNLog/${shortdate}.txt" layout="${longdate} | ${level:uppercase=true:padding=-5} | ${logger} | ${message}"/>
    <target name="logconsole" xsi:type="ColoredConsole" layout="${longdate} | ${level:uppercase=true:padding=-5} | ${logger} | ${message}"/>

  </targets>

  <rules>

    <logger name="*" minlevel="Trace" writeTo="logconsole" />
    <logger name="*" minlevel="Trace" writeTo="logfile" />

  </rules>
</nlog>
